<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />

            <gradient
                android:angle="270"
                android:centerColor="@color/white_60"
                android:centerY="0.75"
                android:endColor="@color/white_60"
                android:startColor="@color/white_60" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#80ffb600"
                    android:centerY="0.75"
                    android:endColor="#a0ffcb00"
                    android:startColor="#80ffd300" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />

                <gradient
                    android:angle="0"
                    android:endColor="#32be1423"
                    android:startColor="#32920783" />
                <!--
                     <gradient
                    android:angle="0"
                    android:centerColor="@color/red"
                    android:centerY="0.5"
                    android:endColor="#60be1423"
                    android:startColor="#60920783" />
                -->
            </shape>
        </clip>
    </item>

</layer-list>