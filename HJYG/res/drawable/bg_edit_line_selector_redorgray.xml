<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 输入框选择器，底部只有一条线，有焦点时为红色，没有时为灰色 -->
    <item android:state_focused="true"><layer-list>

            <!-- 底部为红色的线 -->
            <item><shape>
                    <solid android:color="@color/red" />
                </shape></item>
            <item android:bottom="@dimen/marg_2px"><shape>
                    <solid android:color="@color/white" />
                </shape></item>
        </layer-list></item>
    <item android:state_focused="false"><layer-list>

            <!-- 底部为灰色的线 -->
            <item><shape>
                    <solid android:color="@color/gray_line" />
                </shape></item>
            <item android:bottom="@dimen/marg_2px"><shape>
                    <solid android:color="@color/white" />
                </shape></item>
        </layer-list></item>

</selector>