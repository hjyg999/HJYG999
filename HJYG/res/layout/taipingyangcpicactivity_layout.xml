<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_header"
        style="@style/headerWeight"
        layout="@layout/top_layout" />

    <ScrollView
        android:id="@+id/mScrollView"
        style="@style/relativeLayoutWeight"
        android:background="@color/bulu_C3E2F6"
        android:scrollbars="none" >

        <LinearLayout
            style="@style/Both_Match_style"
            android:orientation="vertical"
            android:paddingBottom="@dimen/marg_30px" >

            <LinearLayout
                android:id="@+id/lin_bj_06"
                style="@style/Match_Wrap_style"
                android:background="@drawable/taipy_bj_06"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    style="@style/Both_Wrap_style"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_01"
                        style="@style/Both_Wrap_style" />

                    <LinearLayout
                        style="@style/Both_Wrap_style"
                        android:layout_marginLeft="@dimen/marg_8px"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_top1"
                            style="@style/Both_Wrap_style"
                            android:text=""
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/tv_top2"
                            style="@style/Both_Wrap_style"
                            android:text=""
                            android:textColor="@color/white" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title1"
                style="@style/Both_Wrap_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marg_30px"
                android:background="@drawable/bg_mra_blue_strok"
                android:paddingBottom="@dimen/marg_2px"
                android:paddingLeft="@dimen/marg_35px"
                android:paddingRight="@dimen/marg_35px"
                android:paddingTop="@dimen/marg_2px"
                android:text=""
                android:textColor="@color/bule_005BAA"
                android:textSize="@dimen/size_30pt" />

            <ImageView
                android:id="@+id/img_main"
                style="@style/Both_Wrap_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marg_40px" />

            <TextView
                android:id="@+id/tv_title2"
                style="@style/Both_Wrap_style"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/marg_20px"
                android:text=""
                android:textColor="@color/red"
                android:textSize="@dimen/size_28pt" />

            <TextView
                android:id="@+id/tv_title3"
                style="@style/Both_Wrap_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marg_10px"
                android:background="@drawable/bg_mra_blue_strok"
                android:paddingBottom="@dimen/marg_2px"
                android:paddingLeft="@dimen/marg_35px"
                android:paddingRight="@dimen/marg_35px"
                android:paddingTop="@dimen/marg_2px"
                android:text=""
                android:textColor="@color/bule_005BAA"
                android:textSize="@dimen/size_30pt" />

            <TextView
                android:id="@+id/tv_title4"
                style="@style/Both_Wrap_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/marg_30px"
                android:layout_marginRight="@dimen/marg_30px"
                android:layout_marginTop="@dimen/marg_20px"
                android:lineSpacingExtra="@dimen/marg_8px"
                android:text=""
                android:textColor="@color/bule_005BAA"
                android:textSize="@dimen/size_28pt" />

            <TextView
                android:id="@+id/tv_title5"
                style="@style/Both_Wrap_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marg_30px"
                android:background="@drawable/bg_mra_blue_strok"
                android:paddingBottom="@dimen/marg_2px"
                android:paddingLeft="@dimen/marg_35px"
                android:paddingRight="@dimen/marg_35px"
                android:paddingTop="@dimen/marg_2px"
                android:text=""
                android:textColor="@color/bule_005BAA"
                android:textSize="@dimen/size_30pt" />

            <LinearLayout
                style="@style/Both_Wrap_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marg_20px"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_center1"
                    style="@style/Both_Wrap_style" />

                <ImageView
                    android:id="@+id/img_center2"
                    style="@style/Both_Wrap_style"
                    android:layout_marginLeft="@dimen/marg_10px" />

                <ImageView
                    android:id="@+id/img_center3"
                    style="@style/Both_Wrap_style"
                    android:layout_marginLeft="@dimen/marg_10px" />

                <ImageView
                    android:id="@+id/img_center4"
                    style="@style/Both_Wrap_style"
                    android:layout_marginLeft="@dimen/marg_10px" />

                <ImageView
                    android:id="@+id/img_center5"
                    style="@style/Both_Wrap_style"
                    android:layout_marginLeft="@dimen/marg_10px" />
            </LinearLayout>

            <LinearLayout
                style="@style/Match_Wrap_style"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_marginRight="@dimen/marg_20px"
                android:layout_marginTop="@dimen/marg_40px"
                android:background="@drawable/bg_ra_bule_sold"
                android:paddingBottom="@dimen/marg_10px"
                android:paddingLeft="@dimen/marg_10px"
                android:paddingRight="@dimen/marg_10px"
                android:paddingTop="@dimen/marg_30px" 
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title6"
                    style="@style/Both_Wrap_style"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_30pt" />
                <TextView
                    android:layout_marginTop="@dimen/marg_40px"
                    android:id="@+id/tv_title7"
                    style="@style/Both_Wrap_style"
                    android:lineSpacingExtra="@dimen/marg_8px"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_28pt" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>