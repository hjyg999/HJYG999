<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Match_Wrap_style"
    android:background="#EEEEEE"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/section"
        style="@style/Match_Wrap_style"
        android:background="#EEEEEE"
        android:paddingLeft="8dp"
        android:textColor="@color/umeng_socialize_text_friends_list" />

    <RelativeLayout style="@style/umeng_socialize_list_item" >

        <ImageView
            android:id="@+id/umeng_socialize_avatar_imv"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:scaleType="fitXY"
            android:src="@drawable/umeng_socialize_default_avatar" />

        <TextView
            android:id="@+id/umeng_socialize_text_view"
            style="@style/Match_Wrap_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/umeng_socialize_avatar_imv"
            android:ellipsize="end"
            android:maxLength="10"
            android:paddingRight="4dp"
            android:textColor="@color/umeng_socialize_list_item_textcolor"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>