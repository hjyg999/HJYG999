<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:orientation="vertical"
    android:padding="@dimen/marg_40px" >

    <ImageView
        android:id="@+id/img_top"
        style="@style/Both_Wrap_style"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/jxw_kx_94_120" />

    <LinearLayout
        style="@style/Both_Wrap_style"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marg_30px"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_hit"
            style="@style/Both_Wrap_style"
            android:src="@drawable/tishzq_28x28" />

        <TextView
            android:id="@+id/tv_msg"
            style="@style/Both_Wrap_style"
            android:layout_marginLeft="@dimen/marg_16px"
            android:text=""
            android:textColor="@color/gray_sq"
            android:textSize="@dimen/size_28pt" />
    </LinearLayout>

</LinearLayout>