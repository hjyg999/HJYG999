<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Both_Match_style"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/re_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/gesture_xt_bg_gray"
        android:padding="3dp" >

        <com.md.hjyg.layoutEntities.CircularImage
            android:id="@+id/head_sex"
            android:background="@drawable/gesture_xt_bg_white"
            style="@style/Both_Match_style"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/gesture_tip_layout"
        style="@style/Match_Wrap_style"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_tip"
            style="@style/Match_Wrap_style"
            android:gravity="center_horizontal"
            android:text="@string/welcome_back"
            android:textColor="@color/red"
            android:textSize="@dimen/size_32pt" />

        <TextView
            android:id="@+id/text_hint"
            style="@style/Match_Wrap_style"
            android:layout_marginTop="@dimen/marg_5px"
            android:gravity="center_horizontal"
            android:text="@string/please_gesture_pattern"
            android:textColor="@color/gray_gold"
            android:textSize="@dimen/size_24pt" />
    </LinearLayout>

    <LinearLayout
        style="@style/Both_Wrap_style"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/gesture_container"
            style="@style/Both_Wrap_style" >
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/lin_bot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_forget_gesture"
            style="@style/Match_Wrap_style"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/forget_gesture_code"
            android:textColor="@color/blue_ht"
            android:textSize="@dimen/size_28pt" />

        <TextView
            android:id="@+id/text_other_account"
            style="@style/Match_Wrap_style"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/use_other_account_login"
            android:textColor="@color/blue_ht"
            android:textSize="@dimen/size_28pt" />
    </LinearLayout>

</LinearLayout>