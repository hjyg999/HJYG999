<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/lin_nodata"
        style="@style/Both_Wrap_style"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            style="@style/Both_Wrap_style"
            android:src="@drawable/meeting_nodata190_240" />

        <TextView
            style="@style/Both_Wrap_style"
            android:layout_marginTop="@dimen/marg_30px"
            android:text="抱歉，暂无数据！"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_32pt" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/mExpandableListView"
        style="@style/Match_Wrap_style"
        android:childDivider="@color/white"
        android:divider="@color/white"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:paddingLeft="@dimen/marg_30px"
        android:paddingRight="@dimen/marg_30px"
        android:scrollbars="none" />

</RelativeLayout>