<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Match_Wrap_style"
    android:orientation="vertical" >

    <View style="@style/view_line" />

    <RelativeLayout
        style="@style/Match_Wrap_style"
        android:paddingBottom="@dimen/marg_16px"
        android:paddingLeft="@dimen/marg_20px"
        android:paddingRight="@dimen/marg_20px"
        android:paddingTop="@dimen/marg_16px" >

        <TextView
            android:id="@+id/tv_nob"
            style="@style/Both_Wrap_style"
            android:layout_centerVertical="true"
            android:background="@drawable/list_bg_c_s"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/size_24pt" />

        <LinearLayout
            style="@style/Both_Wrap_style"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marg_20px"
            android:layout_toRightOf="@+id/tv_nob"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_state"
                style="@style/Both_Wrap_style"
                android:gravity="center"
                android:text="已收"
                android:textColor="@color/green_99CC33"
                android:textSize="@dimen/size_24pt" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/Both_Wrap_style"
                android:gravity="center"
                android:text="2016/20/12"
                android:textColor="@color/gray_sq"
                android:textSize="@dimen/size_24pt" />
        </LinearLayout>

        <LinearLayout
            style="@style/Both_Wrap_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_income"
                style="@style/Both_Wrap_style"
                android:gravity="center"
                android:text="已收"
                android:textColor="@color/gray_sq"
                android:textSize="@dimen/size_24pt" />

            <ImageView
                android:id="@+id/img_toright"
                style="@style/Both_Wrap_style"
                android:layout_marginLeft="@dimen/marg_5px"
                android:gravity="center"
                android:src="@drawable/arrow_right_28x28" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>