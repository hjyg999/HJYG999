<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:orientation="vertical" >

    <com.md.hjyg.layoutEntities.wheel.WheelView
        android:layout_marginTop="@dimen/marg_10px"
        android:id="@+id/mWheelView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />

    <View
        style="@style/view_line"
        android:layout_marginTop="@dimen/marg_5px" />

    <LinearLayout
        style="@style/Match_Wrap_style"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_raleftbot_white_selector"
            android:gravity="center"
            android:padding="@dimen/marg_30px"
            android:text="取消"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_32pt" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_line" />

        <TextView
            android:id="@+id/tv_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_rarightbot_white_selector"
            android:gravity="center"
            android:padding="@dimen/marg_30px"
            android:text="确定"
            android:textColor="@color/red"
            android:textSize="@dimen/size_32pt" />
    </LinearLayout>

</LinearLayout>