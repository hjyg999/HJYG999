<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:background="@color/bg_list"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_header"
        style="@style/headerWeight"
        layout="@layout/top_layout" />

    <RelativeLayout style="@style/relativeLayoutWeight" >

        <ScrollView
            style="@style/Both_Match_style"
            android:background="@color/white" >

            <LinearLayout
                android:id="@+id/ll_edit_account_details"
                style="@style/Match_Wrap_style"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rel_top"
                    android:layout_width="297dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/marg_30px" >

                    <ImageView
                        android:id="@+id/bank_img"
                        style="@style/Both_Match_style"
                        android:src="@drawable/bank" />

                    <LinearLayout
                        style="@style/Both_Match_style"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.65"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.18" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="0.82"
                                android:orientation="vertical" >

                                <TextView
                                    android:id="@+id/tv_BankName"
                                    style="@style/Both_Wrap_style"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/size_28pt" />

                                <TextView
                                    android:id="@+id/tv_branch_name"
                                    style="@style/Both_Wrap_style"
                                    android:layout_marginTop="@dimen/marg_10px"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/size_24pt" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.35" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.18" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.82"
                                android:gravity="center_vertical"
                                android:paddingRight="@dimen/marg_30px" >

                                <TextView
                                    android:id="@+id/ed_card_no"
                                    style="@style/Both_Wrap_style"
                                    android:layout_centerVertical="true"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/size_24pt" />

                                <TextView
                                    android:id="@+id/edit_bank_details"
                                    style="@style/Both_Wrap_style"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:drawableLeft="@drawable/change"
                                    android:drawablePadding="@dimen/marg_10px"
                                    android:gravity="center_vertical"
                                    android:text="修改支行"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/size_24pt" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_add"
                    android:layout_width="297dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/marg_30px"
                    android:background="@drawable/bg_ra_graye9_selector"
                    android:gravity="center"
                    android:text="+添加银行卡"
                    android:textColor="@color/gray_gold"
                    android:textSize="@dimen/size_28pt"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/line_bot"
                    android:layout_width="297dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/marg_60px"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/Both_Wrap_style"
                        android:text="@string/tips"
                        android:textColor="@color/gray_gold"
                        android:textSize="@dimen/size_24pt" />

                    <TextView
                        android:id="@+id/tv_hitmsg"
                        style="@style/Match_Wrap_style"
                        android:layout_marginTop="6dp"
                        android:lineSpacingExtra="3dp"
                        android:text=""
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_24pt" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_bot"
                    style="@style/Both_Wrap_style"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/marg_60px"
                    android:src="@drawable/aliyun" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>