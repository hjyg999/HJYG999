<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" >

            <TextView
                android:id="@+id/tv_loan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定投保D2015-001"
                android:textColor="@color/gray"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_loan_title"
                android:background="@color/red"
                android:orientation="horizontal" >

                <!--
                <TextView
                    android:id="@+id/bidMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100元"
                    android:textColor="#ffffff"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起投"
                    android:textColor="#ffffff"
                    android:textSize="8sp" />
                -->
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_rate_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="11.00"
                    android:textColor="@color/red"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_rate_add"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/tv_rate_value"
                    android:background="@color/red"
                    android:text=" +1.0%"
                    android:textColor="@color/white"
                    android:textSize="8sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_rate_value"
                    android:layout_toRightOf="@+id/tv_rate_value"
                    android:paddingBottom="2dp"
                    android:text="%"
                    android:textColor="@color/red"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_rate_value"
                    android:text="年化收益率"
                    android:textColor="@color/gray_1"
                    android:textSize="10sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_term_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="3"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_term_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_term_value"
                        android:layout_toRightOf="@+id/tv_term_value"
                        android:paddingBottom="2dp"
                        android:text="个月"
                        android:textColor="@color/gray_sq"
                        android:textSize="10sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="期限"
                    android:textColor="@color/gray_q"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv_amout_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="10"
                        android:textColor="@color/red"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_amout_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_amout_value"
                        android:layout_toRightOf="@+id/tv_amout_value"
                        android:paddingBottom="2dp"
                        android:text="万元"
                        android:textColor="@color/gray_sq"
                        android:textSize="10sp" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目金额"
                    android:textColor="@color/gray_q"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1" >

        <!--
             <com.md.hjyg.utility.CustomDigitalClock
            android:id="@+id/cdc_hall_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="00:00:00"
            android:textColor="@color/black"
            android:visibility="gone" />        -->
        <!--
             <TextView
            android:id="@+id/booking_percentage_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="竞标中"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
        -->

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true" >

            <xintou.com.xintou.com.todddavies.components.progressbar.ProgressWheel
                android:id="@+id/progressBar_booking"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                ProgressWheel:barColor="@color/button_color"
                ProgressWheel:barLength="60dp"
                ProgressWheel:barWidth="5dp"
                ProgressWheel:rimColor="#44000000"
                ProgressWheel:rimWidth="5dp" />

            <RelativeLayout
                android:id="@+id/cdc_hall_time_rel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <com.md.hjyg.utility.CustomDigitalClock
                    android:id="@+id/cdc_hall_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:text="00:00:00"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cdc_hall_time"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="10dp"
                    android:text="后发布"
                    android:textColor="@color/red" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <TextView
                    android:id="@+id/booking_percentage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/booking_percentage_text_fh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/booking_percentage_text"
                    android:layout_toRightOf="@+id/booking_percentage_text"
                    android:paddingBottom="1dp"
                    android:text="%"
                    android:textColor="@color/red"
                    android:textSize="8sp" />
            </RelativeLayout>

            <!--
            <TextView
                android:id="@+id/booking_percentage_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="50"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/booking_percentage_text"
                android:layout_toRightOf="@+id/booking_percentage_text"
                android:text="%"
                android:textColor="@android:color/black"
                android:textSize="8sp" />
            -->

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>