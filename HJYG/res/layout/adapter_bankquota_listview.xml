<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/linear_bank"
        style="@style/Match_Wrap_style"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/bank_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/gray_s"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bank_limit_single"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="无限额"
            android:textColor="@color/gray"
            android:textSize="16sp" 
            />

        <TextView
            android:id="@+id/bank_limit_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="无限额"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bank_limit_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="￥60万"
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bank_remark"
        style="@style/Match_Wrap_style"
        android:orientation="vertical"
         >

        <TextView
            android:id="@+id/bank_remark_value"
            style="@style/Match_Wrap_style"
            android:lineSpacingExtra="2dp"
            android:text="备注："
            android:textColor="@color/gray_sq"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bank_remark_phone"
            style="@style/Match_Wrap_style"
            android:lineSpacingExtra="2dp"
            android:text="如有疑问请联系客服：400-078-1901。"
            android:textColor="@color/red"
            android:textIsSelectable="true"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>