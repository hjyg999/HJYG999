<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    style="@style/Both_Match_style"
    android:background="@color/bg_list"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_header"
        style="@style/headerWeight"
        layout="@layout/template_header" />

    <ScrollView
        android:id="@+id/mScrollView"
        style="@style/relativeLayoutWeight"
        android:background="@color/wxredpa_bg"
        android:scrollbars="none" >

        <LinearLayout
            style="@style/Match_Wrap_style"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@drawable/redpacket_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.24" >

                    <LinearLayout
                        style="@style/Both_Wrap_style"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="10dp" >

                        <LinearLayout
                            android:id="@+id/redpacket_Amount"
                            style="@style/Both_Wrap_style"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/redpacket_total_left"
                                style="@style/Both_Wrap_style"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/redpacket_total"
                                style="@style/Both_Wrap_style"
                                android:text=""
                                android:textColor="@color/wxredpa_jl"
                                android:textSize="22sp" />

                            <TextView
                                android:id="@+id/redpacket_total_right"
                                style="@style/Both_Wrap_style"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/redpacket_remark"
                            android:lineSpacingExtra="3dp"
                            style="@style/Both_Wrap_style"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.37"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/redpacket_twodim"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.05"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/twodim_remark"
                        style="@style/Both_Wrap_style"
                        android:layout_gravity="center_horizontal"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.26"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp" >

                    <TextView
                        android:id="@+id/redpacket_share_btn"
                        style="@style/Match_Wrap_style"
                        android:layout_marginTop="30dp"
                        android:background="@drawable/bg_orange_ra_selector"
                        android:gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="分享红包"
                        android:textColor="@color/red"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.08"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/wxredpa_jl" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="红包领取记录"
                        android:textColor="@color/wxredpa_jl"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:background="@color/wxredpa_jl" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_nodate"
                style="@style/Both_Wrap_style"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/description"
                android:padding="15dp"
                android:src="@drawable/redpacket_nodata"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/linear2"
                style="@style/Match_Wrap_style"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="15dp" >

                <LinearLayout
                    style="@style/Match_Wrap_style"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="手机号"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="领取时间"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="金额(元)"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/wxredpa_list" />

                <ListView
                    android:id="@+id/mListView"
                    style="@style/Match_Wrap_style"
                    android:divider="@color/wxredpa_list"
                    android:dividerHeight="1dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>