<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_header"
        style="@style/headerWeight"
        layout="@layout/template_header" />

    <LinearLayout
        style="@style/relativeLayoutWeight"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none" >

            <LinearLayout
                style="@style/Match_Wrap_style"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_top_line"
                    style="@style/Match_Wrap_style"
                    android:background="@drawable/gold_line"
                    android:contentDescription="@string/description" />

                <RelativeLayout
                    android:id="@+id/rel_addAddress"
                    style="@style/gold_style"
                    android:background="@drawable/bg_white_selector" >

                    <TextView
                        style="@style/Both_Wrap_style"
                        android:layout_centerVertical="true"
                        android:text="添加收货地址"
                        android:textColor="@color/gray_gold"
                        android:textSize="@dimen/gold_mianSize" />

                    <ImageView
                        style="@style/Both_Wrap_style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/description"
                        android:src="@drawable/gold_arow_right" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_choiceAddress"
                    style="@style/gold_style"
                    android:background="@drawable/bg_white_selector" >

                    <ImageView
                        android:id="@+id/img"
                        style="@style/Both_Wrap_style"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/description"
                        android:src="@drawable/gold_adress" />

                    <LinearLayout
                        style="@style/Both_Wrap_style"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/img"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/Both_Wrap_style"
                            android:text="收件人：张三    132****6522"
                            android:textColor="@color/gray_gold"
                            android:textSize="@dimen/gold_mianSize" />

                        <TextView
                            style="@style/Both_Wrap_style"
                            android:layout_marginTop="3dp"
                            android:text="湖南省长沙市解放西路28号"
                            android:textColor="@color/gray_sq"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        style="@style/Both_Wrap_style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/description"
                        android:src="@drawable/gold_arow_right" />
                </RelativeLayout>

                <View style="@style/view_line_ma" />

                <RelativeLayout
                    style="@style/gold_style"
                    android:background="@drawable/bg_white_selector" >

                    <TextView
                        style="@style/Both_Wrap_style"
                        android:layout_centerVertical="true"
                        android:text="持有黄金"
                        android:textColor="@color/gray_gold"
                        android:textSize="@dimen/gold_mianSize" />

                    <TextView
                        style="@style/Both_Wrap_style"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="2.0689克"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/gold_mianSize" />
                </RelativeLayout>

                <View style="@style/view_line_ma" />

                <LinearLayout
                    android:id="@+id/lin_goldtype"
                    style="@style/gold_style"
                    android:background="@drawable/bg_white_selector"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_goldtype"
                        style="@style/gold_lin3"
                        android:text="金条类型"
                        android:textColor="@color/gray_gold"
                        android:textSize="@dimen/gold_mianSize" />

                    <RelativeLayout style="@style/gold_lin7" >

                        <TextView
                            android:id="@+id/ed_goldtype"
                            style="@style/Both_Wrap_style"
                            android:layout_centerVertical="true"
                            android:hint="选择金条类型"
                            android:textColor="@color/gray_gold"
                            android:textColorHint="@color/gray_q"
                            android:textSize="@dimen/gold_mianSize" />

                        <ImageView
                            style="@style/Both_Wrap_style"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@string/description"
                            android:src="@drawable/gold_noexpanded" />
                    </RelativeLayout>
                </LinearLayout>

                <View style="@style/view_line_ma" />

                <LinearLayout
                    style="@style/gold_style"
                    android:background="@drawable/bg_white_selector"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_acount"
                        style="@style/gold_lin3"
                        android:text="金条数量"
                        android:textColor="@color/gray_gold"
                        android:textSize="@dimen/gold_mianSize" />

                    <EditText
                        android:id="@+id/ed_acount"
                        style="@style/gold_lin7"
                        android:background="@color/white"
                        android:hint="请输入提取金条的数量"
                        android:inputType="numberDecimal"
                        android:textColor="@color/gray_gold"
                        android:textColorHint="@color/gray_q"
                        android:textSize="@dimen/gold_mianSize" />
                </LinearLayout>

                <View style="@style/view_line_ma" />

                <RelativeLayout
                    android:id="@+id/rel_protect"
                    style="@style/gold_style"
                    android:background="@drawable/bg_white_selector" >

                    <TextView
                        style="@style/Both_Wrap_style"
                        android:layout_centerVertical="true"
                        android:text="是否保价"
                        android:textColor="@color/gray_gold"
                        android:textSize="@dimen/gold_mianSize" />

                    <ImageView
                        android:id="@+id/img_protect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/description"
                        android:src="@drawable/gold_ckeckbox_no" />
                </RelativeLayout>

                <View style="@style/view_line_ma" />

                <LinearLayout
                    style="@style/gold_style"
                    android:background="@drawable/bg_white_selector"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/gold_lin3"
                        android:text="发票抬头"
                        android:textColor="@color/gray_gold"
                        android:textSize="@dimen/gold_mianSize" />

                    <EditText
                        android:id="@+id/ed_name"
                        style="@style/gold_lin7"
                        android:background="@color/white"
                        android:hint="个人/单位名称(选填)"
                        android:singleLine="true"
                        android:textColor="@color/gray_gold"
                        android:textColorHint="@color/gray_q"
                        android:textSize="@dimen/gold_mianSize" />
                </LinearLayout>

                <View style="@style/view_line_ma" />

                <LinearLayout
                    style="@style/gold_style"
                    android:background="@drawable/bg_white_selector"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_invoicetype"
                        style="@style/gold_lin3"
                        android:text="发票类型"
                        android:textColor="@color/gray_gold"
                        android:textSize="@dimen/gold_mianSize" />

                    <TextView
                        style="@style/gold_lin7"
                        android:text="增值税普通发票(纸质)"
                        android:textColor="@color/gray_gold"
                        android:textSize="@dimen/gold_mianSize" />
                </LinearLayout>

                <View style="@style/view_line_ma" />

                <LinearLayout
                    style="@style/gold_style"
                    android:background="@drawable/bg_white_selector"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_invoicecontent"
                        style="@style/gold_lin3"
                        android:text="发票内容"
                        android:textColor="@color/gray_gold"
                        android:textSize="@dimen/gold_mianSize" />

                    <TextView
                        style="@style/gold_lin7"
                        android:text="黄金、金条"
                        android:textColor="@color/gray_gold"
                        android:textSize="@dimen/gold_mianSize" />
                </LinearLayout>

                <View style="@style/view_line_ma" />

                <LinearLayout
                    style="@style/gold_style"
                    android:background="@drawable/bg_white_selector"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_password"
                        style="@style/gold_lin3"
                        android:text="交易密码"
                        android:textColor="@color/gray_gold"
                        android:textSize="@dimen/gold_mianSize" />

                    <EditText
                        android:id="@+id/ed_password"
                        style="@style/gold_lin7"
                        android:background="@color/white"
                        android:hint="请输入交易密码"
                        android:inputType="textPassword"
                        android:textColor="@color/gray_gold"
                        android:textColorHint="@color/gray_q"
                        android:textSize="@dimen/gold_mianSize" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Match_Wrap_style"
                    android:background="@color/gold_qgray_bg"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="10dp" >

                    <TextView
                        android:id="@+id/tv_machfeel"
                        style="@style/Both_Wrap_style"
                        android:text="加工费：39.95元/克(10元/克)"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/gold_mianSize" />

                    <TextView
                        android:id="@+id/tv_expressfeel"
                        style="@style/Both_Wrap_style"
                        android:layout_marginTop="3dp"
                        android:text="邮寄费：30元/克"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/gold_mianSize" />

                    <TextView
                        android:id="@+id/tv_protectfeel"
                        style="@style/Both_Wrap_style"
                        android:layout_marginTop="3dp"
                        android:text="保价费：10元"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/gold_mianSize" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <View style="@style/view_line" />

        <Button
            android:id="@+id/btn_buy"
            style="@style/Match_Wrap_style"
            android:layout_gravity="center"
            android:background="@drawable/bg_white_selector"
            android:padding="10dp"
            android:text="确认提取"
            android:textColor="@color/red"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>