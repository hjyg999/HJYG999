<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_myinfo_changeaddress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <!-- <RelativeLayout
        style="@style/Match_Wrap_style"
        android:background="@color/red"
        android:paddingLeft="15dp"
        android:paddingRight="5dp" >

        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            style="@style/Match_Wrap_style"
            android:layout_centerVertical="true"
            android:text="选择地区"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/dialog_close"
            style="@style/Both_Wrap_style"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/close_dialog" />
    </RelativeLayout> -->

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <com.md.hjyg.layoutEntities.wheel.WheelView
            android:id="@+id/id_province"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <com.md.hjyg.layoutEntities.wheel.WheelView
            android:id="@+id/id_city"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <com.md.hjyg.layoutEntities.wheel.WheelView
            android:id="@+id/id_district"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line" />

    <LinearLayout
        style="@style/Match_Wrap_style"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/btn_myinfo_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_raleftbot_white_selector"
            android:gravity="center"
            android:padding="@dimen/marg_26px"
            android:text="取消"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_32pt"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_line" />

        <TextView
            android:id="@+id/btn_myinfo_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_rarightbot_white_selector"
            android:gravity="center"
            android:padding="@dimen/marg_26px"
            android:text="确定"
            android:textColor="@color/red"
            android:textSize="@dimen/size_32pt" />
    </LinearLayout>

</LinearLayout>