<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Match_Wrap_style"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_marginTop="-2dp"
        style="@style/Match_Wrap_style"
        android:background="@drawable/homescreen_border"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/Match_Wrap_style"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tv_no_of_referrals_count"
                    style="@style/Both_Wrap_style"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    style="@style/Both_Wrap_style"
                    android:layout_marginTop="3dp"
                    android:text="@string/no_of_referrals"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_line" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tv_gross_income_value"
                    style="@style/Both_Wrap_style"
                    android:text="0.00元"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    style="@style/Both_Wrap_style"
                    android:layout_marginTop="3dp"
                    android:text="@string/friends_gross_income"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line" />

        <LinearLayout
            style="@style/Match_Wrap_style"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tv_recommeded_reward_value"
                    style="@style/Both_Wrap_style"
                    android:text="0.00元"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    style="@style/Both_Wrap_style"
                    android:layout_marginTop="3dp"
                    android:text="@string/recommeded_reward_paid"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray_line" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <TextView
                    android:id="@+id/tv_unpaid_referral_reward_value"
                    style="@style/Both_Wrap_style"
                    android:text="0.00元"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    style="@style/Both_Wrap_style"
                    android:layout_marginTop="3dp"
                    android:text="@string/wait_paid_refrrals"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

