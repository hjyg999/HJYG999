<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:orientation="vertical" >

    <TextView
        style="@style/Match_Wrap_style"
        android:background="@drawable/bg_ratop_red"
        android:padding="@dimen/marg_30px"
        android:text="兑换码"
        android:textColor="@color/white"
        android:textSize="@dimen/size_32pt" />

    <LinearLayout
        style="@style/Match_Wrap_style"
        android:background="@color/white"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/ed_dialog"
            style="@style/Match_Wrap_style"
            android:layout_marginBottom="@dimen/marg_60px"
            android:layout_marginLeft="@dimen/marg_30px"
            android:layout_marginRight="@dimen/marg_30px"
            android:layout_marginTop="@dimen/marg_60px"
            android:background="@drawable/homescreen_border"
            android:hint="请输入兑换码，参与抽奖"
            android:padding="@dimen/marg_20px"
            android:text=""
            android:textColor="@color/gray_gold"
            android:textColorHint="@color/gray_q"
            android:textSize="@dimen/size_32pt" />

        <TextView
            android:id="@+id/tv_dialog_hit"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="@dimen/marg_30px"
            android:layout_marginLeft="@dimen/marg_30px"
            android:layout_marginRight="@dimen/marg_30px"
            android:visibility="gone"
            android:text=""
            style="@style/Match_Wrap_style"
            android:textColor="@color/red"
            android:textSize="@dimen/size_28pt" />
    </LinearLayout>

    <View style="@style/view_line" />

    <LinearLayout
        style="@style/Match_Wrap_style"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_raleftbot_white_selector"
            android:gravity="center"
            android:padding="@dimen/marg_30px"
            android:text="取消"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_32pt" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_line" />

        <TextView
            android:id="@+id/tv_dialog_tolottrey"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_rarightbot_white_selector"
            android:gravity="center"
            android:padding="@dimen/marg_30px"
            android:text="去抽奖"
            android:textColor="@color/red"
            android:textSize="@dimen/size_32pt" />
    </LinearLayout>

</LinearLayout>