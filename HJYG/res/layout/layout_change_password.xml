<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_header"
        style="@style/headerWeight"
        layout="@layout/template_header" />

    <RelativeLayout style="@style/relativeLayoutWeight" >

        <ScrollView
            style="@style/Both_Match_style"
            android:background="@color/bg_list" >

            <LinearLayout
                android:id="@+id/ll_verify_deatils"
                style="@style/Match_Wrap_style"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_old_pass"
                    style="@style/Both_Wrap_style"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/old_password"
                    android:textColor="@color/text_color_title"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/ed_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_corner"
                    android:hint="@string/enter_old_pass"
                    android:inputType="textPassword"
                    android:paddingLeft="12dp"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_getverificationcode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn_selector_red"
                    android:text="@string/click_for_verification"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_verification_code"
                    style="@style/Both_Wrap_style"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/verification_code"
                    android:textColor="@color/text_color_title"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/ed_id_number"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_corner"
                    android:hint="@string/type_the_code"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="4"
                    android:paddingLeft="12dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_new_pass"
                    style="@style/Both_Wrap_style"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/new_password"
                    android:textColor="@color/text_color_title"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/ed_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_corner"
                    android:hint="请最少输入6位密码"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:paddingLeft="12dp"
                    android:textSize="16sp" />

                <com.md.hjyg.layoutEntities.PasswordHitView
                    android:id="@+id/passwordHitView"
                    style="@style/Match_Wrap_style"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" />

