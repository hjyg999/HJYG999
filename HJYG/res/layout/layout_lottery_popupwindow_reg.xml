<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:gravity="center"
    android:orientation="vertical" >

    <!-- android:background="#30382E24" -->

    <TextView
        android:id="@+id/popu_text1"
        style="@style/Both_Wrap_style"
        android:layout_gravity="center_horizontal"
        android:text="亲，您还未注册！"
        android:textColor="@color/orange_q"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/popu_text2"
        style="@style/Both_Wrap_style"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="注册登录，iphone6s、钻石、"
        android:textColor="@color/orange_q"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/popu_text3"
        style="@style/Both_Wrap_style"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="金镶玉吊坠、红包...就是你的啦！"
        android:textColor="@color/orange_q"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/popu_text_btn"
        style="@style/Match_Wrap_style"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/red_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="立即注册"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>