<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Match_Wrap_style"
    android:paddingLeft="@dimen/marg_30px"
    android:paddingRight="@dimen/marg_30px"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/Match_Wrap_style"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/marg_20px"
        android:paddingRight="@dimen/marg_20px"
        android:paddingTop="@dimen/marg_20px" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingRight="@dimen/marg_30px" >

            <ImageView
                android:id="@+id/img"
                style="@style/Both_Wrap_style"
                android:src="@drawable/redpacket_xj" />

            <TextView
                android:id="@+id/tv_type"
                style="@style/Both_Wrap_style"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@+id/img"
                android:text="现金红包"
                android:textColor="@color/gray_gold"
                android:textSize="@dimen/size_28pt" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/Both_Wrap_style"
                android:layout_below="@+id/tv_type"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_toRightOf="@+id/img"
                android:text="有效期：2015/08/01-2015/08/31"
                android:textColor="@color/gray_sq"
                android:textSize="@dimen/size_24pt" />

            <TextView
                android:id="@+id/tv_remark"
                style="@style/Both_Wrap_style"
                android:layout_below="@+id/tv_time"
                android:layout_marginLeft="@dimen/marg_20px"
                android:layout_marginTop="@dimen/marg_20px"
                android:layout_toRightOf="@+id/img"
                android:text="兑换要求：现金红包可以直接提现。aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_24pt" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin_amount"
            android:layout_width="72dp"
            android:layout_height="68dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/redpacked_m"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.33"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_amount"
                    style="@style/Both_Wrap_style"
                    android:text="10,000元"
                    android:textColor="@color/red" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.57"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_timetype"
                    style="@style/Both_Wrap_style"
                    android:background="@drawable/bg_mra_reds_bg"
                    android:paddingBottom="@dimen/marg_2px"
                    android:paddingLeft="@dimen/marg_10px"
                    android:paddingRight="@dimen/marg_10px"
                    android:paddingTop="@dimen/marg_2px"
                    android:text="立即领取"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_24pt" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View style="@style/view_line"/>

</LinearLayout>