<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:background="@color/bg_list"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_header"
        style="@style/headerWeight"
        layout="@layout/template_header" />

    <LinearLayout
        style="@style/relativeLayoutWeight"
        android:orientation="vertical" >

        <RelativeLayout
            style="@style/Match_Wrap_style"
            android:background="@color/white"
            android:padding="15dp" >

            <TextView
                style="@style/Both_Wrap_style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/availablebalance"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <LinearLayout
                style="@style/Both_Wrap_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingRight="5dp" >

                <TextView
                    android:id="@+id/tv_availablebalance"
                    style="@style/Both_Wrap_style"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/experiencegold"
                    style="@style/Both_Wrap_style"
                    android:text=""
                    android:textColor="@color/gray_sq"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line" />

        <RelativeLayout
            style="@style/Match_Wrap_style"
            android:background="@color/white"
            android:padding="15dp" >

            <TextView
                style="@style/Both_Wrap_style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/purchaseamount"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_purchaseamount"
                style="@style/Both_Wrap_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="5dp"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line" />

        <LinearLayout
            style="@style/Match_Wrap_style"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <TextView
                android:id="@+id/tv_perperson"
                style="@style/Both_Wrap_style"
                android:text=""
                android:textColor="@color/gray_sq"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray_line" />

        <LinearLayout
            style="@style/Match_Wrap_style"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="15dp" >

            <TextView
                android:id="@+id/ptv_purchaseamount"
                style="@style/Both_Wrap_style"
                android:text="@string/buyamount"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/purchaseamount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint=""
                android:inputType="numberDecimal"
                android:textColor="@color/gray"
                android:singleLine="true"
                android:textColorHint="@color/gray_q"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_line" />

        <TextView
            android:id="@+id/tv_buyhit"
            style="@style/Both_Wrap_style"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray_sq" 
            android:text=""
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_submit_treasure"
            style="@style/Match_Wrap_style"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_selector_red"
            android:padding="10dp"
            android:text="@string/submit_treasure"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_date_current"
            style="@style/Both_Wrap_style"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp"
            android:text=""
            android:textColor="@color/gray_sq" />
    </LinearLayout>

</LinearLayout>