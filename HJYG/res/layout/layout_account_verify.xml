<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:background="@color/bg_list"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_header"
        style="@style/headerWeight"
        layout="@layout/top_layout" />

    <LinearLayout
        style="@style/relativeLayoutWeight"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:id="@+id/img_name"
                style="@style/wrap_match_style"
                android:layout_marginLeft="15dp"
                android:paddingBottom="7dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="7dp"
                android:src="@drawable/user_icon"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/img_name"
                android:background="@drawable/edittext_corner"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="20"
                android:paddingLeft="12dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="#4A4A4A"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:id="@+id/img_password"
                style="@style/wrap_match_style"
                android:layout_marginLeft="15dp"
                android:paddingBottom="7dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="7dp"
                android:src="@drawable/pass_icon"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="-4dp"
                android:layout_marginRight="15dp"
                android:layout_toRightOf="@+id/img_password"
                android:background="@drawable/edittext_corner"
                android:hint="@string/password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLength="30"
                android:paddingLeft="12dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="#4A4A4A"
                android:textSize="16sp" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="27dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_selector_red"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/security"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>