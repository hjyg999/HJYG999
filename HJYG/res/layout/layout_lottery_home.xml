<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" >

        <ImageView
            android:id="@+id/lottery_home_z"
            style="@style/Both_Match_style"
            android:layout_centerInParent="true"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:src="@drawable/lottery_home_z" />

        <ImageView
            android:id="@+id/lottery_home_s"
            style="@style/Both_Wrap_style"
            android:layout_alignRight="@+id/lottery_home_z"
            android:layout_alignTop="@+id/lottery_home_z"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:padding="5dp"
            android:src="@drawable/lottery_home_s" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lottery_home_btn"
            style="@style/Both_Wrap_style"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/btn_selector_red"
            android:paddingBottom="10dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingTop="10dp"
            android:text="立即抽奖"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>