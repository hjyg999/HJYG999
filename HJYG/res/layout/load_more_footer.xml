<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/load_more_footer"
    style="@style/Match_Wrap_style"
    android:background="@color/bg_list" >

    <!-- <View
        android:id="@+id/top_line"
