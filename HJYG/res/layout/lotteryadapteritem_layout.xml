<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Match_Wrap_style"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/line_bg"
        android:layout_width="286dp"
        android:layout_height="106dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marg_30px"
        android:background="@drawable/lottery_bg_pthb"
        android:orientation="vertical"
        android:paddingLeft="@dimen/marg_16px"
        android:paddingRight="@dimen/marg_16px" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.77"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/marg_16px"
                android:src="@drawable/lottery_pthb" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >

                <RelativeLayout style="@style/Match_Wrap_style" >

                    <TextView
                        android:id="@+id/tv_amount"
                        style="@style/Both_Wrap_style"
                        android:text="100元"
                        android:textColor="@color/gray_gold"
                        android:textSize="@dimen/size_24pt" />

                    <TextView
                        android:id="@+id/tv_state"
                        style="@style/Both_Wrap_style"
                        android:layout_alignParentRight="true"
                        android:text="已领取"
                        android:textColor="@color/green_99CC33"
                        android:textSize="@dimen/size_24pt" />
                </RelativeLayout>

                <RelativeLayout
                    style="@style/Match_Wrap_style"
                    android:layout_marginTop="@dimen/marg_16px" >

                    <TextView
                        android:id="@+id/tv_type"
                        style="@style/Both_Wrap_style"
                        android:text="体验金红包"
                        android:textColor="@color/gray_sq"
                        android:textSize="@dimen/size_24pt" />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/Both_Wrap_style"
                        android:layout_alignParentRight="true"
                        android:text="2016/05/26 12:30:00"
                        android:textColor="@color/gray_sq"
                        android:textSize="@dimen/size_24pt" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.23" >

            <TextView
                android:id="@+id/tv_valid"
                style="@style/Both_Wrap_style"
                android:layout_centerVertical="true"
                android:text="有效期：2016/04/28-2016/04/28"
                android:textColor="@color/gray_sq"
                android:textSize="@dimen/size_24pt" />

            <LinearLayout
                android:id="@+id/lin_touse"
                style="@style/Both_Wrap_style"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_touse"
                    style="@style/Both_Wrap_style"
                    android:text="立即查看"
                    android:textColor="@color/red"
                    android:textSize="@dimen/size_24pt" />

                <ImageView
                    android:id="@+id/img_arrow"
                    android:layout_marginLeft="@dimen/marg_5px"
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:src="@drawable/arrow_red_r_16x28" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>