<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_header"
        style="@style/headerWeight"
        layout="@layout/top_layout" />

    <ScrollView
        style="@style/relativeLayoutWeight"
        android:scrollbars="none" >

        <LinearLayout
            style="@style/Match_Wrap_style"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/lin_top"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/rec_top_bg"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.65" >

                    <RelativeLayout
                        android:id="@+id/head"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp" >

                        <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/description"
                            android:scaleType="fitXY"
                            android:src="@drawable/circle_head_bg_whit" />

                        <com.md.hjyg.layoutEntities.CircularImage
                            android:id="@+id/head_sex"
                            android:layout_width="41dp"
                            android:layout_height="41dp"
                            android:layout_centerInParent="true"
                            android:scaleType="fitXY" />
                    </RelativeLayout>

                    <LinearLayout
                        style="@style/Both_Wrap_style"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/head"
                        android:layout_marginLeft="@dimen/marg_20px"
                        android:orientation="vertical" >

                        <LinearLayout
                            style="@style/Both_Wrap_style"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/recommonder_levele_tv"
                                style="@style/Both_Wrap_style"
                                android:layout_gravity="center_vertical"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_36pt" />

                            <ImageView
                                android:id="@+id/recommonder_levele_im"
                                android:layout_width="12dp"
                                android:layout_height="16dp"
                                android:layout_marginTop="1dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/recommonder_des_tv"
                            style="@style/Both_Wrap_style"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_28pt" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/recommand_rule_tv"
                        style="@style/Both_Wrap_style"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="15dp" >

                        <TextView
                            style="@style/Both_Wrap_style"
                            android:text="@string/recommand_rule"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_24pt" />

                        <ImageView
                            android:layout_width="6dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="@dimen/marg_8px"
                            android:src="@drawable/arrow_white_small" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.35"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/recaward_get_yes_rl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <LinearLayout
                            style="@style/Both_Wrap_style"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/recaward_get_yes_tv"
                                style="@style/Both_Wrap_style"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_32pt" />

                            <TextView
                                style="@style/Both_Wrap_style"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="1dp"
                                android:text="@string/recaward_get_yes"
                                android:textColor="@color/gray_q"
                                android:textSize="@dimen/size_24pt" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_arrow1"
                            android:layout_width="7dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/marg_5px"
                            android:src="@drawable/arrow_white_16x29" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/recaward_get_no_rl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <LinearLayout
                            style="@style/Both_Wrap_style"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/recaward_get_no_tv"
                                style="@style/Both_Wrap_style"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_32pt" />

                            <TextView
                                style="@style/Both_Wrap_style"
                                android:layout_marginTop="3dp"
                                android:text="@string/recaward_get_no"
                                android:textColor="@color/gray_q"
                                android:textSize="@dimen/size_24pt" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_arrow2"
                            android:layout_width="7dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/marg_5px"
                            android:src="@drawable/arrow_white_16x29" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/recaward_reg_sum_rl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <LinearLayout
                            style="@style/Both_Wrap_style"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/recaward_reg_sum_tv"
                                style="@style/Both_Wrap_style"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/size_28pt" />

                            <TextView
                                style="@style/Both_Wrap_style"
                                android:layout_marginTop="3dp"
                                android:text="推荐好友"
                                android:textColor="@color/gray_q"
                                android:textSize="@dimen/size_24pt" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/img_arrow3"
                            android:layout_width="7dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/marg_30px"
                            android:src="@drawable/arrow_white_16x29" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/Match_Wrap_style"
                android:layout_marginTop="@dimen/marg_20px"
                android:background="@color/white"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/recommand_request_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_friend"
                        style="@style/Both_Wrap_style"
                        android:src="@drawable/rec_request_iv" />

                    <TextView
                        style="@style/Both_Wrap_style"
                        android:layout_marginTop="3dp"
                        android:text="@string/home_invite_friend"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_28pt" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recommand_red_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_share"
                        style="@style/Both_Wrap_style"
                        android:src="@drawable/rec_red_iv" />

                    <TextView
                        android:id="@+id/tv_sharehit"
                        style="@style/Both_Wrap_style"
                        android:layout_marginTop="3dp"
                        android:text="@string/share_redpacket"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_28pt" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/recommand_qrcode_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/img_twodimensional"
                        style="@style/Both_Wrap_style"
                        android:src="@drawable/rec_qrcode_iv" />

                    <TextView
                        style="@style/Both_Wrap_style"
                        android:layout_marginTop="3dp"
                        android:text="@string/mytwodimensional"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/size_28pt" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/marg_20px"
                android:background="@color/gray_line" />

            <ImageView
                android:id="@+id/img_bottom"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:src="@drawable/rec_bottom_bg" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>