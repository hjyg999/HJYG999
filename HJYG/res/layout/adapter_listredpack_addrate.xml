<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Match_Wrap_style"
    android:orientation="vertical"
    android:paddingTop="@dimen/marg_30px" >

    <FrameLayout
        android:id="@+id/mFrameLayout"
        android:layout_width="297dp"
        android:layout_height="94dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/redpacked_orange" >

        <LinearLayout
            style="@style/Both_Match_style"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.71"
                android:paddingLeft="@dimen/marg_30px"
                android:paddingRight="@dimen/marg_16px" >

                <RelativeLayout
                    style="@style/Match_Wrap_style"
                    android:layout_centerVertical="true" >

                    <TextView
                        android:id="@+id/tv_addrate"
                        style="@style/Both_Wrap_style"
                        android:text="加息券"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_30pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/Both_Wrap_style"
                        android:layout_alignBaseline="@+id/tv_addrate"
                        android:layout_marginLeft="@dimen/marg_10px"
                        android:layout_toRightOf="@+id/tv_addrate"
                        android:text="期限：30天"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_24pt" />

                    <TextView
                        android:id="@+id/tv_term"
                        style="@style/Both_Wrap_style"
                        android:layout_below="@+id/tv_addrate"
                        android:text="有效期：2016/01/02-2016/01/30"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_24pt" />

                    <TextView
                        android:id="@+id/tv_condition"
                        style="@style/Both_Wrap_style"
                        android:layout_below="@+id/tv_term"
                        android:layout_marginTop="@dimen/marg_16px"
                        android:text="使用条件：健身卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_24pt" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.29"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.4" />

                <LinearLayout
                    style="@style/Both_Wrap_style"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    android:orientation="vertical" >

                    <LinearLayout
                        style="@style/Both_Wrap_style"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_rate"
                            style="@style/Both_Wrap_style"
                            android:text="+10.00"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_32pt"
                            android:textStyle="bold" />

                        <TextView
                            style="@style/Both_Wrap_style"
                            android:text="%"
                            android:textColor="@color/white"
                            android:textSize="@dimen/size_20pt" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_toinvset_1"
                        style="@style/Both_Wrap_style"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/marg_16px"
                        android:background="@drawable/bg_ra_or_f27428_selector"
                        android:paddingBottom="@dimen/marg_2px"
                        android:paddingLeft="@dimen/marg_10px"
                        android:paddingRight="@dimen/marg_10px"
                        android:paddingTop="@dimen/marg_2px"
                        android:text="立即投资"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_24pt" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_usetype"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_gravity="right|top"
            android:src="@drawable/redpacked_addrate_cu"
            android:visibility="visible" />
    </FrameLayout>

</LinearLayout>