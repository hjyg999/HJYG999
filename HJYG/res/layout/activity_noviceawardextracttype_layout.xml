<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_header"
        style="@style/headerWeight"
        layout="@layout/top_layout" />

    <LinearLayout
        style="@style/CenterWeight_84"
        android:orientation="vertical" >

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lin_express"
            style="@style/Match_Wrap_style"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_top_line"
                style="@style/Match_Wrap_style"
                android:background="@drawable/gold_line"
                android:contentDescription="@string/description" />

            <LinearLayout
                style="@style/line_style"
                android:orientation="horizontal" >

                <TextView
                    style="@style/gold_lin3"
                    android:text="收件人"
                    android:textColor="@color/gray_gold"
                    android:textSize="@dimen/size_28pt" />

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/gold_lin7"
                    android:text=""
                    android:textColor="@color/gray_gold"
                    android:textSize="@dimen/size_28pt" />
            </LinearLayout>

            <View style="@style/view_line_new" />

            <LinearLayout
                style="@style/line_style"
                android:orientation="horizontal" >

                <TextView
                    style="@style/gold_lin3"
                    android:text="联系方式"
                    android:textColor="@color/gray_gold"
                    android:textSize="@dimen/size_28pt" />

                <TextView
                    android:id="@+id/tv_MobilePhone"
                    style="@style/gold_lin7"
                    android:text=""
                    android:textColor="@color/gray_gold"
                    android:textSize="@dimen/size_28pt" />
            </LinearLayout>

            <View style="@style/view_line_new" />

            <LinearLayout
                style="@style/line_style"
                android:orientation="horizontal" >

                <TextView
                    style="@style/gold_lin3"
                    android:text="所在地区"
                    android:textColor="@color/gray_gold"
                    android:textSize="@dimen/size_28pt" />

                <TextView
                    android:id="@+id/tv_choiceaddress"
                    style="@style/gold_lin7"
                    android:hint="省/市"
                    android:text=""
                    android:textColor="@color/gray_gold"
                    android:textColorHint="@color/gray_q"
                    android:textSize="@dimen/size_28pt" />
            </LinearLayout>

            <View style="@style/view_line_new" />

            <LinearLayout
                style="@style/line_style"
                android:orientation="horizontal" >

                <TextView
                    style="@style/gold_lin3"
                    android:text="收货地址"
                    android:textColor="@color/gray_gold"
                    android:textSize="@dimen/size_28pt" />

                <EditText
                    android:id="@+id/ed_address"
                    style="@style/gold_lin7"
                    android:background="@color/white"
                    android:hint="请填写详细信息"
                    android:text=""
                    android:textColor="@color/gray_gold"
                    android:textColorHint="@color/gray_q"
                    android:textSize="@dimen/size_28pt" />
            </LinearLayout>

            <View style="@style/view_line_new_red" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/lin_myself"
            style="@style/Match_Wrap_style"
            android:layout_marginTop="@dimen/marg_30px"
            android:orientation="vertical"
            android:paddingLeft="@dimen/marg_30px"
            android:paddingRight="@dimen/marg_30px" >

            <TextView
                style="@style/Both_Wrap_style"
                android:layout_marginTop="@dimen/marg_20px"
                android:text="自取地点"
                android:textColor="@color/gray_gold"
                android:textSize="@dimen/size_28pt" />

             <TextView
                android:layout_marginTop="2dp"
                android:lineSpacingExtra="2dp"
                style="@style/Both_Wrap_style"
                android:text="湖南长沙芙蓉中路一段475号玛丽莱大厦六楼"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_28pt" />

            <TextView
                style="@style/Both_Wrap_style"
                android:layout_marginTop="@dimen/marg_20px"
                android:text="附近公交"
                android:textColor="@color/gray_gold"
                android:textSize="@dimen/size_28pt" />

            <TextView
                android:id="@+id/tv_top1"
                android:layout_marginTop="2dp"
                android:lineSpacingExtra="2dp"
                style="@style/Both_Wrap_style"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="@dimen/size_28pt" />

            <TextView
                style="@style/Both_Wrap_style"
                android:layout_marginTop="@dimen/marg_20px"
                android:text="自取说明"
                android:textColor="@color/gray_gold"
                android:textSize="@dimen/size_28pt" />

            <TextView
                android:layout_marginTop="2dp"
                android:lineSpacingExtra="2dp"
                style="@style/Both_Wrap_style"
                android:text="● 请于周一至周六8：30-17：30上门自取\n● 自取时请携带本人有效身份证\n● 代人领取奖品的，需携带本人和被代领人身份证\n● 如有疑问请联系客服400-078-1901"
                android:textColor="@color/gray"
                android:textSize="@dimen/size_28pt" /> 
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/headerWeight"
        android:orientation="vertical" >

        <View style="@style/view_line" />

        <TextView
            android:id="@+id/tv_btn"
            style="@style/Both_Match_style"
            android:background="@drawable/bg_white_selector"
            android:gravity="center"
            android:text="保   存"
            android:textColor="@color/red"
            android:textSize="@dimen/size_36pt" />
    </LinearLayout>

</LinearLayout>