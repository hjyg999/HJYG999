<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dash="http://schemas.android.com/apk/res/com.md.hjyg"
    style="@style/Both_Match_style"
    android:background="@color/bg_list"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_date"
        style="@style/Both_Wrap_style"
        android:layout_gravity="center_horizontal"
        android:padding="3dp"
        android:text="2015年10月"
        android:textColor="@color/gray"
        android:textSize="12sp" />

    <LinearLayout
        style="@style/Match_Wrap_style"
        android:background="@drawable/homescreen_border"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <LinearLayout
            style="@style/Match_Wrap_style"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                style="@style/Both_Wrap_style"
                android:text="@string/recommended_no"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_recommended_no_value"
                style="@style/Both_Wrap_style"
                android:layout_marginLeft="2dp"
                android:text="10"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                style="@style/Both_Wrap_style"
                android:text="@string/new_invest_listing"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_newlisting_value"
                style="@style/Both_Wrap_style"
                android:layout_marginLeft="2dp"
                android:text="10"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>

        <com.md.hjyg.layoutEntities.DashedLine
            android:layout_width="match_parent"
            android:layout_height="1dp"
            dash:lineColor="@color/gray_line" />

        <LinearLayout
            style="@style/Match_Wrap_style"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_friends_have_been_incorporated_count"
                    style="@style/Both_Wrap_style"
                    android:text="111"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    style="@style/Both_Wrap_style"
                    android:text="@string/friends_have_been_incorporated"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_rewards_paid_count"
                    style="@style/Both_Wrap_style"
                    android:text="111"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    style="@style/Both_Wrap_style"
                    android:text="@string/rewareds_paids"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_unpaid_rewards_count"
                    style="@style/Both_Wrap_style"
                    android:text="111"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    style="@style/Both_Wrap_style"
                    android:text="@string/wait_paid_refrrals"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

