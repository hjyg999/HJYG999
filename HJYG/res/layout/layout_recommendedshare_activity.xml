<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:background="@color/white"
    android:id="@+id/main"
    android:orientation="vertical" >

    <com.md.hjyg.layoutEntities.HeaderView
        android:id="@+id/mheadView"
        style="@style/headerWeight"/>

    <ScrollView
        style="@style/relativeLayoutWeight"
        android:scrollbars="none" >

        <LinearLayout
            style="@style/Match_Wrap_style"
            android:orientation="vertical"
            android:paddingBottom="@dimen/marg_30px" >

            <ImageView
                android:id="@+id/head_img"
                android:layout_height="591dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="319dp"
                android:src="@drawable/rec_share_centre"
                android:contentDescription="@string/description" 
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_sharebtn"
                style="@style/Both_Wrap_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_ra_yeff9934_selector"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="@string/invite_go"
                android:textColor="@color/white"
                android:textSize="16sp" />
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>