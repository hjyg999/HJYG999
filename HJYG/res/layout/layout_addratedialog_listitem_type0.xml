<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Match_Wrap_style"
    android:orientation="vertical"
    android:paddingTop="@dimen/marg_16px" >

    <FrameLayout
        android:id="@+id/mFrameLayout"
        android:layout_width="234dp"
        android:layout_height="74dp"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            style="@style/Both_Match_style"
            android:background="@drawable/redpacked_orange_520x165"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.71"
                android:paddingLeft="@dimen/marg_16px"
                android:paddingRight="@dimen/marg_16px" >

                <RelativeLayout
                    style="@style/Match_Wrap_style"
                    android:layout_centerVertical="true" >

                    <TextView
                        android:id="@+id/tv_addrate"
                        style="@style/Both_Wrap_style"
                        android:text="加息券"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_28pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/Both_Wrap_style"
                        android:layout_alignBaseline="@+id/tv_addrate"
                        android:layout_marginLeft="@dimen/marg_10px"
                        android:layout_toRightOf="@+id/tv_addrate"
                        android:text="期限：30天"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_20pt" />

                    <TextView
                        android:id="@+id/tv_term"
                        style="@style/Both_Wrap_style"
                        android:layout_below="@+id/tv_addrate"
                        android:text="有效期：2016/01/02-2016/01/30"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_20pt" />

                    <TextView
                        android:id="@+id/tv_condition"
                        style="@style/Both_Wrap_style"
                        android:layout_below="@+id/tv_term"
                        android:layout_marginTop="@dimen/marg_16px"
                        android:text="使用条件：健身卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡卡"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_20pt" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.29" >

                <RelativeLayout
                    style="@style/Both_Wrap_style"
                    android:layout_centerInParent="true" >

                    <TextView
                        android:id="@+id/tv_rate"
                        style="@style/Both_Wrap_style"
                        android:text="+10.00"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_28pt"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/Both_Wrap_style"
                        android:layout_alignBaseline="@+id/tv_rate"
                        android:layout_toRightOf="@+id/tv_rate"
                        android:text="%"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_20pt" />

                    <TextView
                        style="@style/Both_Wrap_style"
                        android:layout_below="@+id/tv_rate"
                        android:layout_centerHorizontal="true"
                        android:text="可使用"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_20pt" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/v_albg"
            style="@style/Both_Match_style"
            android:alpha="0.5"
            android:background="@color/black" 
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_ok"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:src="@drawable/redpacked_ok" 
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_income"
        style="@style/Both_Wrap_style"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="@dimen/marg_16px"
        android:paddingTop="@dimen/marg_16px"
        android:text="加息券收益:50元"
        android:textColor="@color/gray"
        android:textSize="@dimen/size_28pt" />

    <View
        android:id="@+id/v_line"
        android:layout_width="234dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/gray_line" />

</LinearLayout>