<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Match_Wrap_style"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout style="@style/Match_Wrap_style" >

        <ImageView
            android:id="@+id/img_bg"
            style="@style/Match_Wrap_style"
            android:layout_alignBottom="@+id/lin"
            android:contentDescription="@string/description"
             />

        <LinearLayout
            android:id="@+id/lin"
            style="@style/Match_Wrap_style"
            android:orientation="vertical" >

            <RelativeLayout
                style="@style/Match_Wrap_style"
                android:paddingTop="@dimen/marg_30px"
                android:paddingBottom="@dimen/marg_20px"
                android:paddingLeft="@dimen/marg_30px"
                android:paddingRight="@dimen/marg_30px" >

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/Both_Wrap_style"
                    android:text="资产处置011201期"
                    android:textColor="@color/gray_gold"
                    android:textSize="@dimen/size_28pt" />

                <TextView
                    android:id="@+id/tv_huoqiname"
                    style="@style/Both_Wrap_style"
                    android:layout_centerHorizontal="true"
                    android:text="活期宝"
                    android:textColor="@color/gray_gold"
                    android:textSize="@dimen/size_28pt" />

                <TextView
                    android:id="@+id/tv_canbuy"
                    style="@style/Both_Wrap_style"
                    android:layout_alignBottom="@+id/tv_name"
                    android:layout_alignParentRight="true"
                    android:text="100元起投"
                    android:textColor="@color/gray_sq"
                    android:textSize="@dimen/size_24pt" />
            </RelativeLayout>

            <RelativeLayout
                style="@style/Match_Wrap_style"
                android:paddingBottom="@dimen/marg_30px"
                android:paddingLeft="@dimen/marg_30px"
                android:paddingRight="@dimen/marg_30px" >

                <LinearLayout
                    style="@style/Both_Wrap_style"
                    android:gravity="left"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_term"
                        style="@style/Both_Wrap_style"
                        android:text="1.67"
                        android:textColor="@color/gray_gold"
                        android:textSize="@dimen/size_36pt" />

                    <TextView
                        android:id="@+id/tv_termhit"
                        style="@style/Both_Wrap_style"
                        android:layout_marginTop="@dimen/marg_5px"
                        android:text="期限"
                        android:textColor="@color/gray_sq"
                        android:textSize="@dimen/size_24pt" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Both_Wrap_style"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        style="@style/Both_Wrap_style"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_rate"
                            style="@style/Both_Wrap_style"
                            android:text="6.00"
                            android:textColor="@color/red"
                            android:textSize="@dimen/size_36pt" />

                        <TextView
                            android:id="@+id/tv_rateadd"
                            style="@style/Both_Wrap_style"
                            android:text="% + 0.5%"
                            android:textColor="@color/red"
                            android:textSize="@dimen/size_24pt" />
                    </LinearLayout>

                    <TextView
                        style="@style/Both_Wrap_style"
                        android:layout_marginTop="@dimen/marg_5px"
                        android:text="预期年华收益率"
                        android:textColor="@color/gray_sq"
                        android:textSize="@dimen/size_24pt" />
                </LinearLayout>

                <LinearLayout
                    style="@style/Both_Wrap_style"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_surplus"
                        style="@style/Both_Wrap_style"
                        android:text="1.67"
                        android:textColor="@color/gray_gold"
                        android:textSize="@dimen/size_36pt" />

                    <TextView
                        style="@style/Both_Wrap_style"
                        android:layout_marginTop="@dimen/marg_5px"
                        android:text="剩余金额(元)"
                        android:textColor="@color/gray_sq"
                        android:textSize="@dimen/size_24pt" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/v_line"
                style="@style/view_line_new" />

            <TextView
                android:id="@+id/tv_tobuy"
                android:background="@drawable/home_buy_selector"
                style="@style/Match_Wrap_style"
                android:gravity="center"
                android:padding="@dimen/marg_30px"
                android:text="立即抢购"
                android:textColor="@color/red"
                android:textSize="@dimen/size_28pt" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>