<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style"
    android:background="@color/red_E23924"
    android:orientation="vertical" >

    <com.md.hjyg.layoutEntities.HeaderView
        android:id="@+id/mheadView"
        style="@style/headerWeight" />

    <ScrollView
        style="@style/relativeLayoutWeight"
        android:scrollbars="none" >

        <LinearLayout
            style="@style/Match_Wrap_style"
            android:orientation="vertical"
            android:paddingLeft="@dimen/marg_20px"
            android:paddingRight="@dimen/marg_20px" >

            <ImageView
                android:id="@+id/img_tx"
                android:layout_width="82dp"
                android:layout_height="108dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marg_40px"
                android:background="@drawable/happysmallwriting_tx_bg"
                android:src="@drawable/happysmallwriting_tx" />

            <TextView
                android:id="@+id/tv_tx"
                style="@style/Both_Wrap_style"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marg_8px"
                android:text="上传头像"
                android:textColor="@color/white"
                android:textSize="@dimen/size_28pt" />

            <LinearLayout
                style="@style/Match_Wrap_style"
                android:layout_marginTop="@dimen/marg_30px"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/marg_10px"
                    android:text="*姓名"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_28pt" />

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.85"
                    android:background="@drawable/bg_ra_white"
                    android:hint="请输入姓名"
                    android:paddingBottom="@dimen/marg_20px"
                    android:paddingLeft="@dimen/marg_10px"
                    android:paddingRight="@dimen/marg_10px"
                    android:paddingTop="@dimen/marg_20px"
                    android:singleLine="true"
                    android:textColor="@color/gray_gold"
                    android:textColorHint="@color/gray_q"
                    android:textSize="@dimen/size_28pt" />
            </LinearLayout>

            <LinearLayout
                style="@style/Match_Wrap_style"
                android:layout_marginTop="@dimen/marg_20px"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/marg_10px"
                    android:text="*年龄"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_28pt" />

                <TextView
                    android:id="@+id/tv_selsctAge"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.85"
                    android:background="@drawable/bg_ra_white"
                    android:drawableRight="@drawable/happysmallwriting_select_year"
                    android:gravity="center_vertical"
                    android:hint="请选择年龄"
                    android:paddingBottom="@dimen/marg_20px"
                    android:paddingLeft="@dimen/marg_10px"
                    android:paddingRight="@dimen/marg_10px"
                    android:paddingTop="@dimen/marg_20px"
                    android:singleLine="true"
                    android:textColor="@color/gray_gold"
                    android:textColorHint="@color/gray_q"
                    android:textSize="@dimen/size_28pt" />
            </LinearLayout>

            <LinearLayout
                style="@style/Match_Wrap_style"
                android:layout_marginTop="@dimen/marg_20px"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/marg_10px"
                    android:text="学校"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_28pt" />

                <EditText
                    android:id="@+id/ed_School"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.85"
                    android:background="@drawable/bg_ra_white"
                    android:hint="请输入学校名称"
                    android:paddingBottom="@dimen/marg_20px"
                    android:paddingLeft="@dimen/marg_10px"
                    android:paddingRight="@dimen/marg_10px"
                    android:paddingTop="@dimen/marg_20px"
                    android:singleLine="true"
                    android:textColor="@color/gray_gold"
                    android:textColorHint="@color/gray_q"
                    android:textSize="@dimen/size_28pt" />
            </LinearLayout>

            <LinearLayout
                style="@style/Match_Wrap_style"
                android:layout_marginTop="@dimen/marg_20px"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/marg_10px"
                    android:text="简介"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_28pt" />

                <EditText
                    android:id="@+id/ed_Introduction"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.85"
                    android:background="@drawable/bg_ra_white"
                    android:hint="请输入20字以内的简短介绍或参赛宣言"
                    android:maxLength="20"
                    android:paddingBottom="@dimen/marg_20px"
                    android:paddingLeft="@dimen/marg_10px"
                    android:paddingRight="@dimen/marg_10px"
                    android:paddingTop="@dimen/marg_20px"
                    android:singleLine="true"
                    android:textColor="@color/gray_gold"
                    android:textColorHint="@color/gray_q"
                    android:textSize="@dimen/size_28pt" />
            </LinearLayout>

            <LinearLayout
                style="@style/Match_Wrap_style"
                android:layout_marginTop="@dimen/marg_20px"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/marg_10px"
                    android:text="*标题"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_28pt" />

                <EditText
                    android:id="@+id/ed_Title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.85"
                    android:background="@drawable/bg_ra_white"
                    android:hint="作文标题12字以内"
                    android:maxLength="12"
                    android:paddingBottom="@dimen/marg_20px"
                    android:paddingLeft="@dimen/marg_10px"
                    android:paddingRight="@dimen/marg_10px"
                    android:paddingTop="@dimen/marg_20px"
                    android:singleLine="true"
                    android:textColor="@color/gray_gold"
                    android:textColorHint="@color/gray_q"
                    android:textSize="@dimen/size_28pt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_Titlehit"
                style="@style/Match_Wrap_style"
                android:layout_marginTop="@dimen/marg_20px"
                android:orientation="horizontal" 
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/marg_10px"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_28pt" />

                <TextView
                    android:id="@+id/tv_Titlehit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.85"
                    android:paddingLeft="@dimen/marg_10px"
                    android:text="您还可以输入12个字符！"
                    android:textColor="@color/yellow_FFCC33"
                    android:textSize="@dimen/size_24pt" />
            </LinearLayout>

            <LinearLayout
                style="@style/Match_Wrap_style"
                android:layout_marginTop="@dimen/marg_20px"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.15"
                    android:gravity="right"
                    android:paddingRight="@dimen/marg_10px"
                    android:paddingTop="@dimen/marg_20px"
                    android:text="*正文"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_28pt" />

                <EditText
                    android:id="@+id/ed_Text"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="0.85"
                    android:background="@drawable/bg_ra_white"
                    android:gravity="top"
                    android:hint="编辑100字以内的作文"
                    android:maxLength="150"
                    android:paddingBottom="@dimen/marg_20px"
                    android:paddingLeft="@dimen/marg_10px"
                    android:paddingRight="@dimen/marg_10px"
                    android:paddingTop="@dimen/marg_20px"
                    android:textColor="@color/gray_gold"
                    android:textColorHint="@color/gray_q"
                    android:textSize="@dimen/size_28pt" />
            </LinearLayout>
             <LinearLayout
                android:id="@+id/lin_Texthit"
                style="@style/Match_Wrap_style"
                android:layout_marginTop="@dimen/marg_20px"
                android:orientation="horizontal" 
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="right|center_vertical"
                    android:paddingRight="@dimen/marg_10px"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_28pt" />

                <TextView
                    android:id="@+id/tv_Texthit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.85"
                    android:paddingLeft="@dimen/marg_10px"
                    android:text="您已经输入12个字符！"
                    android:textColor="@color/yellow_FFCC33"
                    android:textSize="@dimen/size_24pt" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_btn"
                style="@style/Match_Wrap_style"
                android:layout_marginTop="@dimen/marg_40px"
                android:background="@drawable/bg_mra_whitlesold_selector"
                android:gravity="center"
                android:padding="@dimen/marg_20px"
                android:text="提   交"
                android:textColor="@color/red_E23924"
                android:textSize="@dimen/size_32pt"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_Rule"
                style="@style/Both_Wrap_style"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/marg_30px"
                android:text="查看活动规则"
                android:textColor="@color/white"
                android:textSize="@dimen/size_28pt" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>